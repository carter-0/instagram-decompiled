<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:amazon="http://schemas.amazon.com/apk/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="https://schemas.android.com/tools" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/grey_9"/>
            <size android:height="3dp"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip android:gravity="left" android:clipOrientation="horizontal">
            <scale android:scaleWidth="100%">
                <shape>
                    <corners android:topRightRadius="5dp" android:bottomRightRadius="5dp"/>
                    <solid android:color="@color/grey_4"/>
                    <size android:height="3dp"/>
                </shape>
            </scale>
        </clip>
    </item>
</layer-list>
