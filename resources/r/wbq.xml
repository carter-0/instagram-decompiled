    <item android:id="@+id/message_comments_pill_shadow_layer">
        <shape android:shape="rectangle">
            <padding android:left="@dimen/abc_control_corner_material" android:top="@dimen/abc_control_corner_material" android:right="@dimen/abc_control_corner_material" android:bottom="@dimen/abc_control_corner_material"/>
            <corners android:radius="@dimen/action_bar_item_spacing_right"/>
