<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:amazon="http://schemas.amazon.com/apk/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="https://schemas.android.com/tools" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:id="@+id/refreshable_progress_background">
        <shape android:shape="ring" android:useLevel="false" android:innerRadius="15dp" android:thickness="1.5dp">
            <solid android:color="@color/chat_sticker_chat_bubble_color"/>
        </shape>
    </item>
    <item android:id="@+id/refreshable_progress_track">
        <rotate android:fromDegrees="270" android:toDegrees="270" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="ring" android:useLevel="true" android:innerRadius="15dp" android:thickness="1.5dp">
                <solid android:color="@color/refreshable_progress_drawable_track"/>
            </shape>
        </rotate>
    </item>
</layer-list>
