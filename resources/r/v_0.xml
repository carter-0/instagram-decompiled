<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:amazon="http://schemas.amazon.com/apk/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="https://schemas.android.com/tools" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <layer-list>
                <item android:bottom="2dp">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/blue_4"/>
                        <corners android:topRightRadius="2dp" android:bottomRightRadius="2dp"/>
                    </shape>
                </item>
            </layer-list>
        </clip>
    </item>
</layer-list>
