<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:amazon="http://schemas.amazon.com/apk/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="https://schemas.android.com/tools" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/igds_color_elevated_background"/>
            <corners android:radius="@dimen/abc_button_padding_horizontal_material"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/igds_color_highlight_background"/>
            <corners android:radius="@dimen/abc_button_padding_horizontal_material"/>
            <stroke android:width="1dp" android:color="?attr/igds_color_transparent"/>
        </shape>
    </item>
</selector>
